{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {

            "name": "client",
            "image": "mapundir7/multi-client",
            "hostname": "client",
            "essential": false

        },
        {

            "name": "server",
            "image": "mapundir7/multi-server",
            "hostname": "api",
            "essential": false

        },
        {

            "name": "worker",
            "image": "mapundir7/multi-worker",
            "hostname": "worker",
            "essential": false

        },
        {

            "name": "nginx",
            "image": "mapundir7/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]

        }
    ]

}